<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_sale_order_acopio_wizard_form" model="ir.ui.view">
            <field name="name">sale.order.acopio.wizard.form</field>
            <field name="model">sale.order.acopio.wizard</field>
            <field name="arch" type="xml">
                <form string="Confirmar Acopio">
                    <group>
                        <field name="sale_order_id" readonly="1"/>
                        <field name="confirm_acopio"/>
                    </group>
                    <footer>
                        <button string="Aceptar" type="object" name="action_confirm_acopio" class="btn-primary"/>
                        <button string="Cancelar" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
